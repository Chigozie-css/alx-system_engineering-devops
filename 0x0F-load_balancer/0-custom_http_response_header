#!/usr/bin/env bash
# Install nginx and configure custom HTTP response header

# Colors
blue='\e[1;34m'
brown='\e[0;33m'
green='\e[1;32m'
reset='\033[0m'

# Update and perform minor checks
echo -e "${blue}Updating and performing minor checks...${reset}\n"

install() {
    command -v "$1" &> /dev/null
    if [ $? -ne 0 ]; then
        echo -e "Installing: ${brown}$1${reset}\n"
        sudo apt-get update -y -qq && \
        sudo apt-get install -y "$1" -qq || { echo "Failed to install $1"; exit 1; }
        echo -e "\n"
    else
        echo -e "${green}${1} is already installed.${reset}\n"
    fi
}

# Install nginx
install nginx

echo -e "\n${blue}Setting up some minor stuff.${reset}\n"

# Allow nginx through firewall
sudo ufw allow 'Nginx HTTP'

# Set ownership and permissions for website files
sudo mkdir -p /var/www/html /var/www/error
sudo chown -R "$USER":"$USER" /var/www
sudo chmod -R 755 /var/www

# Create index and error pages
echo "Hello World!" > /var/www/html/index.html
echo "Ceci n'est pas une page" > /var/www/error/error_404.html

# Backup default server config file
sudo cp /etc/nginx/sites-enabled/default nginx-sites-enabled_default.backup

# Configure nginx server with custom header
server_config="server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html
    server_name_;
    add_header X-Served-By \$hostname;
    location / {
        try_files \$uri \$uri/ =404;
    }
    if (\$request_filename ~ redirect_me){
        rewrite ^ https://th3-gr00t.tk/ permanent;
    }
    error_page 404 /error_404.html;
    location = /error_404.html {
        internal;
    }
}"

# Apply server configuration
echo "$server_config" | sudo dd status=none of=/etc/nginx/sites-enabled/default || { echo "Failed to configure nginx"; exit 1; }

# Start or restart nginx service
if [ "$(pgrep -c nginx)" -le 0 ]; then
    sudo service nginx start
else
    sudo service nginx restart
fi
